@model Do_An_Web_K2.Models.VideoViewModel
@{
    //danh sach Phim Thứ hai trong sql
    var idList2 = new List<int> { 2, 3, 5, 6 };
    var Movieitems2 = Model.ThongTinPhim.Where(item => idList2.Contains(item.Id)).Take(4);
    //Danh Sach Phim Th 4 trong sql
    var idList3 = new List<int> { 4, 6, 8, 15 };
    var Movieitems3 = Model.ThongTinPhim.Where(item => idList3.Contains(item.Id)).Take(4);
    //Danh Sach Phim noi bat bên Phải
    var idList4 = new List<int> { 17, 18, 19, 20 };
    var Movieitems4 = Model.ThongTinPhim.Where(item => idList4.Contains(item.Id)).Take(4);
    //Danh Sach Phim moi bat nhat
    var idList5 = new List<int> { 7 };
    var Movieitems5 = Model.ThongTinPhim.Where(item => idList5.Contains(item.Id)).Take(1);
    //Danh sach so nam Phim
    var idList8 = new List<int> { 1, 3, 6 };
    var Movieitems8 = Model.ThongTinPhim.Where(item => idList8.Contains(item.Id)).Take(3);
    var idList9 = new List<int> { 7, 9, 12 };
    var Movieitems9 = Model.ThongTinPhim.Where(item => idList9.Contains(item.Id)).Take(3);
    var idList10 = new List<int> { 14, 16, 19 };
    var Movieitems10 = Model.ThongTinPhim.Where(item => idList10.Contains(item.Id)).Take(3);
    var idList11 = new List<int> { 21, 24, 27 };
    var Movieitems11 = Model.ThongTinPhim.Where(item => idList11.Contains(item.Id)).Take(3);

}
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Trang Web Phim</title>
        <link rel="stylesheet" href="~/Web/DoAnWeb/chạy_demo__video/Demo.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    </head>
    <body>

        <div class="mid">
            <div class="contentleft">
                <div class="title">
                    <h5><i class="fa-solid fa-house"></i>&nbsp;Trang chủ</h5>
                    <h5>&ensp;/&ensp;</h5>
                    <h5>@Model.Video.TieuDePhim</h5>
                </div>
                <div class="content1">
                    <div id="DemoVideo">
               <iframe style="margin: auto;" id="myVideo" src="@Model.Video.Video" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        <br>
                    <h5>SERVER DỰ PHÒNG</h5>
                    <div class="server">
                        <button onclick="playVideo()"><i class="fa-solid fa-play"></i>&ensp;Server#1</button>
                        <p>Nếu không xem được vui lòng đổi server#1 hoặc  sever#2</p>
                    </div>
                    <h5>THÔNG TIN PHIM</h5>
                    <div class="ThongTinPhimXem">
                        <div class="ImgMovie"><img src="@Model.Video.Image" alt=""></div>
                        <div class="informationquyangcao"> <h2> @Model.Video.TieuDePhim <div class="saodanhgia"><p class="nam">@Model.Video.SoNamPhim</p></div></h2></div>
                    </div>
                </div>
                </div>
            <div id="Phim">
                <h4>Phim mới</h4>
                <div class="content2">
                    @foreach (var item in Movieitems2)
                    {
                        <div class="Khunganh">
                            <div class="img">
                                <div class="video-thumbnail">
                                    <img src="@item.Image" alt="">
                                    <a asp-controller="Phimlist" asp-action="Video" asp-route-id="@item.Id">
                                        <div class="overlay">
                                            <div class="play-button">
                                                &#9658;
                                            </div>

                                        </div>
                                    </a>
                                </div>
                                <div class="trangthai">@item.TrangThai</div>

                            </div>
                            <div class="TieuDe">
                                <p>@item.TieuDePhim</p>
                                <p class="nam">@item.SoNamPhim</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="content3">
                    @foreach (var item in Movieitems3)
                    {
                        <div class="Khunganh">
                            <div class="img">
                                <div class="video-thumbnail">
                                    <img src="@item.Image" alt="">
                                    <a asp-controller="Phimlist" asp-action="Video" asp-route-id="@item.Id">
                                        <div class="overlay">
                                            <div class="play-button">
                                                &#9658;
                                            </div>

                                        </div>
                                    </a>
                                </div>
                                <div class="trangthai">@item.TrangThai</div>

                            </div>
                            <div class="TieuDe">
                                <p>@item.TieuDePhim</p>
                                <p class="nam">@item.SoNamPhim</p>
                            </div>
                        </div>
                    }
                </div>
                </div>
            </div>
            <div class="contentright">
                <div class="right1">
                    <div class="year">
                        <h4>Năm phát hành</h4>
                    </div>
                    <div class="year1">
                    <div>
                        <ul>
                            @foreach (var item in Movieitems8)
                            {
                                <li>
                                    <a asp-controller="Phimlist" asp-action="NamPhim" asp-route-id="@item.Id">
                                        @item.SoNamPhim
                                    </a>
                                </li>

                            }
                        </ul>
                        <ul>
                            @foreach (var item in Movieitems9)
                            {
                                <li>
                                    <a asp-controller="Phimlist" asp-action="NamPhim" asp-route-id="@item.Id">
                                        @item.SoNamPhim
                                    </a>
                                </li>

                            }
                        </ul>
                        <ul>
                            @foreach (var item in Movieitems10)
                            {
                                <li>
                                    <a asp-controller="Phimlist" asp-action="NamPhim" asp-route-id="@item.Id">
                                        @item.SoNamPhim
                                    </a>
                                </li>

                            }
                        </ul>
                        <ul>
                            @foreach (var item in Movieitems11)
                            {
                                <li>
                                    <a asp-controller="Phimlist" asp-action="NamPhim" asp-route-id="@item.Id">
                                        @item.SoNamPhim
                                    </a>
                                </li>

                            }
                        </ul>
                    </div>
                    </div>
                </div>
                <div class="right2">
                @foreach (var item in Movieitems5)
                {
                    <div class="movie">
                        <div class="video-thumbnail">
                            <img class="img" src="@item.Image" alt="">
                            <a asp-controller="Phimlist" asp-action="Video" asp-route-id="@item.Id">
                                <div class="overlay">
                                    <div class="play-button">
                                        &#9658;
                                    </div>

                                </div>
                            </a>
                        </div>
                        <p class="tenphim">@item.TieuDePhim</p><p class="tenphim">@item.SoNamPhim</p>
                    </div>
                }
                    <div class="baiviet">
                        <b>Các bộ mới nổi gần đây</b>
                        <hr>
                    @foreach (var item in Movieitems4)
                    {
                        <div class="quangcao">
                            <div class="imgright2">
                                <div class="video-thumbnail">
                                    <img src="@item.Image" alt="">
                                    <a asp-controller="Phimlist" asp-action="Video" asp-route-id="@item.Id">
                                        <div class="overlay">
                                            <div class="play-button">
                                                &#9658;
                                            </div>

                                        </div>
                                    </a>
                                </div>
                            </div>
                            <div class="informationquyangcao"> <p>@item.TieuDePhim<div class="saodanhgia"><p class="star"><i class="fa-solid fa-star"></i>&ensp;9.0</p><p class="nam">@item.SoNamPhim</p></div></p></div>
                        </div>
                    }
                </div>
                </div>
            </div>
        </div>
    </body>
    </html>


